<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="smartercardhome.inipage.com.usagehome" >

    <permission
        android:name="smartercardhome.inipage.com.usagehome.RECEIVE_DATA_PERMISSION"
        android:label="This permission is used to ensure only Homely Launcher can receive module data." />

    <uses-permission android:name="smartercardhome.inipage.com.usagehome.RECEIVE_DATA_PERMISSION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IconChooserActivity"
            android:label="@string/title_activity_icon_chooser"
            android:theme="@style/AppThemeDarkNoActionBar" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="smartercardhome.inipage.com.usagehome.HomeActivity" />
        </activity>

        <service
            android:name=".SequentialLauncherService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>
